<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/helperTitle_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#73c3a7" >

        <EditText
            android:id="@+id/helperSearchText"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_margin="5dip"
            android:layout_toLeftOf="@+id/helperSearch_btn"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/helperSearch_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dip"
            android:contentDescription="@string/desc"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_searchfriend_in_white" />

       <!-- <TextView
            android:id="@+id/helperTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"            
            android:gravity="center"
            android:layout_margin="5dip"
            android:text="Helper"
            android:textColor="@color/white"
            android:textSize="30sp"/> -->

      <TextView
            android:id="@+id/helperPadding"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

		<Spinner 
			android:id="@+id/helperspinner" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/helperSearch_btn"
            android:layout_toRightOf="@+id/helperPadding"			
 			android:background="#73c3a7" 			
			android:spinnerMode = "dropdown"
 			android:popupBackground="#73c3a7"
			/> 
    </RelativeLayout>    
        
	<ListView  
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:id="@id/android:list"
    	android:divider="@color/listview_line"
        android:dividerHeight="1dp"     	
    />
</LinearLayout>