<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lilayoutStartPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_frame"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- tools:context=".StartPage" -->

    <ImageView
        android:id="@+id/login_imagetitle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dip"
        android:contentDescription="@string/desc"
        android:background="@drawable/loginman" />

    <ImageView
        android:id="@+id/login_imagetitleword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:contentDescription="@string/desc"
        android:background="@drawable/words_meetday" />

    <LinearLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/login_interval_line"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/login_top_middleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/login_method"
                android:textSize="20sp"
                android:background="#FFFFFF"
                android:textColor="#73c3a7" />            
            
            <ImageView
		        android:id="@+id/login_top_leftText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/login_top_middleText"
				android:paddingRight="6sp"
		        android:contentDescription="@string/desc"
		        android:background="@drawable/login_top_line" />
            
            <ImageView
		        android:id="@+id/login_top_rightText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@id/login_top_middleText"
				android:paddingLeft="6sp"
		        android:contentDescription="@string/desc"
		        android:background="@drawable/login_top_line" />
        </RelativeLayout>

