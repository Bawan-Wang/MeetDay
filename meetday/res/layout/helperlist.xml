<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/helpercowork_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#00000000"
        android:contentDescription="@string/desc"
        android:focusable="false"
        android:scaleType="fitCenter" />    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/helpercowork_img"
        android:layout_alignTop="@+id/helpercowork_img"
        android:layout_toLeftOf="@+id/helpercowork_img"        
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/helperlist_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/defaulttext"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/helperlistnum_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/defaulttext"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
