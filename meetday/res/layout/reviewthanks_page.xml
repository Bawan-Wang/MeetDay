<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lirlayoutReviewThxCard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relayoutReviewThxCard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73c3a7" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/hist_thankscard_title"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/closethank_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/thankimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/thankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dip"
            android:text="@string/def_thanktext"
            android:textColor="@color/dark"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayoutReviewThxCard_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73c3a7"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/changethankimg_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_margin="15dip"
            android:contentDescription="@string/desc" 
            android:scaleType="centerInside" />"

        <ImageButton
            android:id="@+id/changethanktext_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_margin="15dip"
            android:layout_toRightOf="@+id/changethankimg_btn"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/thanklettersend_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dip"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside" />
    </RelativeLayout>

</LinearLayout>