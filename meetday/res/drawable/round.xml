<?xml version="1.0" encoding="utf-8"?>
<shape 
xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle"
>
    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners 
    android:radius="30dip" 
    />
        
    <!-- 框內底部顏色 -->
    <solid 
    android:color="@color/listview_line" 
    />
        
    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
    android:width="2.0dip"
    android:color="@color/listview_line" 
    />

        
    <!-- padding內縮距離 -->
    <padding
    android:left="3dip"
    android:right="3dip"
    android:top="5dip"
    android:bottom="5dip"
    />
        
    <!-- 尺寸大小 -->
    <size
    android:width="300dip"
    android:height="300dip"
    />
        
</shape>